{
    "name": "kocsismate/php-version-benchmarks",
    "description": "Official PHP benchmark suite",
    "license": "MIT",
    "homepage": "https://github.com/kocsismate/php-version-benchmarks",
    "keywords": ["PHP", "benchmarks"],
    "authors": [
        {
            "name": "Máté Kocsis",
            "email": "kocsismate@woohoolabs.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-strict-rules": "^0.12.0",
        "squizlabs/php_codesniffer": "^3.5.6",
        "woohoolabs/coding-standard": "^2.2.0"
    },
    "autoload": {
        "psr-4": {
            "PhpVersionBenchmarks\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --level 8 src",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf"
    },
    "config": {
        "bin-compat": "full",
        "platform": {
            "php": "8.0"
        },
        "platform-check": false,
        "sort-packages": true
    }
}
